<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.pc.ControladorCarga"
            style="-fx-background-color: linear-gradient(to right, #f4f4f4, #d9e4f5);"
            prefWidth="900" prefHeight="600">

  <left>
    <VBox spacing="20" alignment="CENTER" BorderPane.alignment="CENTER"
          style="-fx-background-color: white; -fx-padding: 30; -fx-border-radius: 15; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 0);">
      <Text text="Controles" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

      <Button fx:id="botonCargar"
              text="📁 Cargar Imágenes"
              style="-fx-font-size: 14px; -fx-padding: 10px 20px; -fx-background-radius: 10;"/>

      <Button fx:id="botonProcesar"
              text="⚙ Procesar Imágenes"
              disable="true"
              style="-fx-font-size: 14px; -fx-padding: 10px 20px; -fx-background-radius: 10;"/>
    </VBox>
  </left>

  <center>
    <TilePane hgap="20" vgap="20" alignment="CENTER">
      <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
      </padding>

      <VBox alignment="CENTER" style="-fx-border-color: #B3E5FC; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: #ffffff; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0.3, 0, 0);">
        <ImageView fx:id="imagen1" fitWidth="140" fitHeight="140" preserveRatio="true"/>
      </VBox>

      <VBox alignment="CENTER" style="-fx-border-color: #B3E5FC; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: #ffffff; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0.3, 0, 0);">
        <ImageView fx:id="imagen2" fitWidth="140" fitHeight="140" preserveRatio="true"/>
      </VBox>

      <VBox alignment="CENTER" style="-fx-border-color: #B3E5FC; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: #ffffff; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0.3, 0, 0);">
        <ImageView fx:id="imagen3" fitWidth="140" fitHeight="140" preserveRatio="true"/>
      </VBox>

      <VBox alignment="CENTER" style="-fx-border-color: #B3E5FC; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: #ffffff; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0.3, 0, 0);">
        <ImageView fx:id="imagen4" fitWidth="140" fitHeight="140" preserveRatio="true"/>
      </VBox>

      <VBox alignment="CENTER" style="-fx-border-color: #B3E5FC; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: #ffffff; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0.3, 0, 0);">
        <ImageView fx:id="imagen5" fitWidth="140" fitHeight="140" preserveRatio="true"/>
      </VBox>

    </TilePane>
  </center>

</BorderPane>
