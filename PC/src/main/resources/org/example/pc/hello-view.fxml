<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.pc.ControladorCarga"
            style="-fx-background-color: linear-gradient(to right, #f9f9f9, #e0e0e0);">

  <center>
    <HBox spacing="40" alignment="CENTER">
      <!-- Panel izquierdo: botones -->
      <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-padding: 30; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 0);">
        <Button fx:id="botonCargar"
                text="📁 Cargar Imágenes"
                style="-fx-font-size: 14px; -fx-padding: 12px 30px; -fx-background-radius: 8;"/>
        <Button fx:id="botonProcesar"
                text="⚙ Procesar Imágenes"
                disable="true"
                style="-fx-font-size: 14px; -fx-padding: 12px 30px; -fx-background-radius: 8;"/>
      </VBox>

      <!-- Panel derecho: imágenes -->
      <FlowPane hgap="15" vgap="15" alignment="CENTER"
                style="-fx-background-color: white; -fx-padding: 30; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 0);">
        <ImageView fx:id="imagen1" fitWidth="120" fitHeight="120" preserveRatio="true"
                   style="-fx-effect: dropshadow(gaussian, gray, 4, 0.3, 0, 0);"/>
        <ImageView fx:id="imagen2" fitWidth="120" fitHeight="120" preserveRatio="true"
                   style="-fx-effect: dropshadow(gaussian, gray, 4, 0.3, 0, 0);"/>
        <ImageView fx:id="imagen3" fitWidth="120" fitHeight="120" preserveRatio="true"
                   style="-fx-effect: dropshadow(gaussian, gray, 4, 0.3, 0, 0);"/>
        <ImageView fx:id="imagen4" fitWidth="120" fitHeight="120" preserveRatio="true"
                   style="-fx-effect: dropshadow(gaussian, gray, 4, 0.3, 0, 0);"/>
        <ImageView fx:id="imagen5" fitWidth="120" fitHeight="120" preserveRatio="true"
                   style="-fx-effect: dropshadow(gaussian, gray, 4, 0.3, 0, 0);"/>
      </FlowPane>
    </HBox>
  </center>

</BorderPane>
